<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:textColor="#ff00bf"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:id="@+id/text_name" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name"
        android:layout_alignLeft="@+id/text_name"
        android:layout_alignStart="@+id/text_name"
        android:layout_marginTop="12dp"
        android:textColor="#ff00bf"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/text_orderid" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8000ff"
        android:layout_below="@+id/text_orderid"
        android:layout_alignLeft="@+id/text_orderid"
        android:layout_alignStart="@+id/text_orderid"
        android:layout_marginTop="12dp"
        android:id="@+id/text_status" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:textColor="#8000ff"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_status"
        android:layout_alignLeft="@+id/text_status"
        android:layout_alignStart="@+id/text_status"
        android:layout_marginTop="13dp"
        android:id="@+id/text_qty" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor= "#ff0080"
        android:id="@+id/text_shamount"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/text_qty"
        android:layout_alignLeft="@+id/text_qty"
        android:layout_alignStart="@+id/text_qty" />

</RelativeLayout>